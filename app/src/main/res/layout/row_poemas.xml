<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_poemas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F1F1F1"
    card_view:cardMaxElevation="12dp"
    android:layout_margin="6dp">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="#fff"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_poema"
                android:layout_width="fill_parent"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_height="180dp"
                android:src="@drawable/ic_broken_image_black_24dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="4dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titulo_poema"
                android:text="@string/titulo_articulo"
                android:textColor="@color/secondary_text"
                android:textSize="16sp"
                android:layout_weight="8"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/aclonica"
                android:layout_width="wrap_content"
                android:layout_below="@id/image"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like"
                android:tint="@color/colorAccent"
                android:layout_weight="1"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:id="@+id/like_poema"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/id_poema"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/cuerpo_poema"
                android:text="cuenti10"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/autor_poema"
                android:text="autor"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/video"
                android:text="cuenti10"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/imgPath_poema"
                android:text="cuenti10"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
