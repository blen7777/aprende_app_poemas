<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recycler_adivinanzas"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        tools:context="com.children.joselopez.children.fragments.Adivinanza" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:id="@+id/no_data2"
        android:visibility="gone"
        android:src="@drawable/ic_iconfinder_cry"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_adivinazas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/id_banner">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>